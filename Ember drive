        const carGrid = document.getElementById('carGrid');
        const modal = document.getElementById('modal');
        const selectedCarInfo = document.getElementById('selectedCarInfo');
        const btnYes = document.getElementById('btnYes');
        const btnNo = document.getElementById('btnNo');
        
        let currentCar = null;

        // Populate cars
        cars.forEach(car => {
            const carDiv = document.createElement('div');
            carDiv.className = 'car-item';
            carDiv.innerHTML = `
                <div class="car-name">${car.name}</div>
                <div class="car-details">${car.details}</div>
                <div class="car-price">${car.price}</div>
            `;
            
            carDiv.addEventListener('click', () => {
                currentCar = car;
                selectedCarInfo.innerHTML = `
                    <strong>${car.name}</strong><br>
                    ${car.details}<br>
                    <span style="color: #FFD700; font-size: 24px; font-weight: 700;">${car.price}/day</span>
                `;
                modal.classList.add('active');
            });
            
            carGrid.appendChild(carDiv);
        });

        // Yes button - Send to WhatsApp
        btnYes.addEventListener('click', () => {
            if (currentCar) {
                const message = `Hi! I'd like to book the ${currentCar.name} (${currentCar.details}) for ${currentCar.price}/day from Car-fortable.`;
                const whatsappUrl = `https://wa.me/message/MJETQSJL5ZLEJ1?text=${encodeURIComponent(message)}`;
                window.open(whatsappUrl, '_blank');
                modal.classList.remove('active');
            }
        });

        // No button - Close modal
        btnNo.addEventListener('click', () => {
            modal.classList.remove('active');
            currentCar = null;
        });

        // Close modal when clicking outside
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.remove('active');
                currentCar = null;
            }
        });
